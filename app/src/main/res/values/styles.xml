<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:itemBackground">@color/colorWhite</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    <style name="CollapsingTextAppearance.Inverse">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="MovieDetailTextAppearance"/>

    <style name="MovieDetailTextAppearance.ItemRow">
        <item name="android:gravity">start</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MovieListTextAppearance" parent="TextAppearance.AppCompat.Small"/>

    <style name="MovieListTextAppearance.ItemRow">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:lineSpacingExtra">@dimen/dimension_8dp</item>
        <item name="android:layout_marginStart">@dimen/dimension_20dp</item>
        <item name="android:layout_marginEnd">@dimen/dimension_8dp</item>
    </style>

    <style name="MovieReviewTextAppearance" parent="TextAppearance.AppCompat.Small"/>

    <style name="MovieReviewTextAppearance.ItemRow">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:lineSpacingExtra">@dimen/dimension_8dp</item>
        <item name="android:layout_marginStart">@dimen/dimension_4dp</item>
        <item name="android:layout_marginEnd">@dimen/dimension_4dp</item>
        <item name="android:layout_marginBottom">@dimen/dimension_12dp</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance.AppCompat"/>
    <style name="TextAppearance.Header">
        <item name="android:minHeight">20dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="MovieDetailCardViewAppearance" parent="CardView">
        <item name="cardBackgroundColor">@color/colorWhite</item>
        <item name="contentPaddingBottom">@dimen/dimension_16dp</item>
        <item name="contentPaddingRight">@dimen/dimension_16dp</item>
        <item name="contentPaddingLeft">@dimen/dimension_16dp</item>
        <item name="android:layout_margin">@dimen/dimension_8dp</item>
        <item name="cardCornerRadius">@dimen/dimension_4dp</item>
        <item name="cardElevation">@dimen/dimension_4dp</item>
    </style>

</resources>